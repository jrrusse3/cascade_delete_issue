<p id="notice"><%= notice %></p>

<h1>ABET Criteria</h1>
<% if @abets.count > 0 %>
<table frame='box'>
  <thead>
    <tr>
      <th>Description</th>
      <th>Poor</th>
      <th>Acceptable</th>
      <th>Exceeds Expectations</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @abets.order(:description).each do |abet| %>
      <tr>
        <td><%= abet.description %></td>
        <td align="center"><%= abet.poor %></td>
        <td align="center"><%= abet.acceptable %></td>
        <td align="center"><%= abet.exceeds %></td>
        <td><%= link_to 'Show', abet %></td>
        <td><%= link_to 'Edit', edit_abet_path(abet) %></td>
        <td><%= link_to 'Destroy', abet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
  <h4>No ABET Criteria Exist</h4>
<% end %>
<br>
<%= link_to 'New ABET Criteria', new_abet_path %>

<h2>Bulk Upload ABET Criteria</h2>
<%= form_tag import_abets_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "Import ABET Criteria" %>
<% end %>
<h3><a href="abet_template.csv" download>Download Template</a></h3>
<h3><a href="abet_test_data.csv" download>Download Example Data</a></h3>

