

<h1>ABET Criteria Assignments</h1>

<table class="table">
  <thead>
    <tr>
      <th>Course Number</th>
      <th>Faculty Member</th>
      <th class="text-center">Criteria Assigned</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses_users.each do |courses_user| %>
      <tr>
        <td><%= courses_user.course.course_number %></td>
        <td><%= courses_user.user.full_name %></td>
        <td class="text-center"><%= courses_user.abet_grades.count %></td>
        <td><%= link_to 'View Criteria', courses_user %></td>
        <td><%= link_to 'Assign Criteria', edit_courses_user_path(courses_user) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
